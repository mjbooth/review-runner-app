{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/api/**/*",
    "src/lib/**/*",
    "src/types/**/*",
    "src/services/**/*",
    "src/jobs/**/*"
  ],
  "exclude": ["node_modules", "src/components/**/*", "src/app/**/*", "**/*.test.ts", "**/*.spec.ts"]
}
